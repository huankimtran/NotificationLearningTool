<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:popupTheme="@style/Theme.AppCompat.Light"
                android:id="@+id/item_detail_toolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_reply_24dp"
                        android:background="?attr/colorPrimary"
                        android:tint="#ffffff"
                        android:layout_alignParentLeft="true"
                        android:padding="@dimen/fab_margin"
                        android:id="@+id/item_detail_back" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_save_24dp"
                        android:background="?attr/colorPrimary"
                        android:tint="#ffffff"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/fab_margin"
                        android:id="@+id/item_detail_save" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_delete_24dp"
                        android:background="?attr/colorPrimary"
                        android:tint="#ffffff"
                        android:layout_toLeftOf="@id/item_detail_save"
                        android:padding="@dimen/fab_margin"
                        android:id="@+id/item_detail_delete" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item's Name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_detail_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item's Content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_detail_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item's hints,examples"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_detail_hint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item's Category"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_detail_category"></Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_detail_level_picker">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_keyboard_arrow_right_24dp"
                    android:id="@+id/item_detail_next_level"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_keyboard_arrow_left_24dp"
                    android:id="@+id/item_detail_back_level"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:layout_toLeftOf="@id/item_detail_next_level"
                    android:layout_toRightOf="@id/item_detail_back_level"
                    android:id="@+id/item_detail_level"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Next remind"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/fab_margin"/>
            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_detail_next_remind">
            </CalendarView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:id="@+id/item_detail_id"/>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
